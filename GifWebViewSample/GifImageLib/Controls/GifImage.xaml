<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GifImageLib.Controls.GifImage">
    <ContentView.Resources>
        <ResourceDictionary>
            <ControlTemplate x:Key="WebViewTemplate">
                <WebView x:Name="webView" WidthRequest="{TemplateBinding WidthRequest}" HeightRequest="{TemplateBinding HeightRequest}" BackgroundColor="Transparent" />
            </ControlTemplate>
            <ControlTemplate x:Key="NativeImageTemplate">
                <Grid WidthRequest="{TemplateBinding Width}" HeightRequest="{TemplateBinding Height}" IsClippedToBounds="true">
                    <Image x:Name="image" WidthRequest="{TemplateBinding Width}" 
                       HeightRequest="{TemplateBinding Height}" 
                       Aspect="{TemplateBinding Aspect}" IsAnimationPlaying="true" />
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </ContentView.Resources>
</ContentView>
